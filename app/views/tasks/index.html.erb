<div class="row align-items-center mt-4">
  <%@tasks.each do |task|%>
    <div class="card shadow mb-1 mt-1 bg-light">
      <div class=" cart-title fs-4 ">
        <%=task.title%>
        <%='<i class="bi bi-check-circle"></i>'.html_safe if task.status.todo? %>
        <%='<div><i class="bi bi-hourglass-split"></i></div>'.html_safe if task.status.inprogress? %>
        <%='<i class="bi bi-check-circle-fill"></i>'.html_safe if task.status.done? %>
      </div>
      <div class=" cart-body  ">
        <div class=" ">
          created by : <%=task.user.email%> <%=link_to "", task_path(task), class:"stretched-link"%>
        </div>
      </div>
    </div>
  <%end%>
</div>
