<div class="row align-items-center mt-4">
  <%@tasks.each do |task|%>
    <div class="card shadow mb-1 mt-1 bg-light">
      <div class=" cart-title fs-4 ">
        <%=task.title%>
        <div class="text-end">
          <%='<i class="bi bi-circle text-primary"></i>'.html_safe if task.status.todo? %>
          <%='<i class="bi bi-hourglass-split text-warning"></i>'.html_safe if task.status.inprogress? %>
          <%='<i class="bi bi-check-circle-fill text-success"></i>'.html_safe if task.status.done? %>
        </div>
      </div>
      <div class=" cart-body  ">
        <div class=" ">
          created by : <%=task.user.email%> <%=link_to "", task_path(task), class:"stretched-link"%>
        </div>
      </div>
    </div>
  <%end%>
</div>
