<div class="col-lg-8 mx-auto bg-light shadow rounded-1 p-3 mt-5">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {'data-turbo' => "false"}) do |f| %>
    <div class="mb-1">
      <%= f.label :email, class: "form-label fs-3" %>
    </div>
    <div class="mb-1">
      <%= f.email_field :email, autocomplete: "email", class: "form-control bg-light", style:" text-align: center" %>
    </div>
    <%=form_errors_helper(resource,:email)%>
    <div class="mb-1">
      <%= f.label :password, class: "form-label fs-3" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
    <div class="mb-1">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control bg-light", style:" text-align: center" %>
    </div>
    <%=form_errors_helper(resource,:password)%>
    <div class="mb-1">
      <%= f.label :password_confirmation, class: "form-label fs-3" %></div>
    <div class="mb-1">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-light", style:" text-align: center" %>
    </div>
    <%=form_errors_helper(resource,:password_confirmation)%>
    <div class="mb-1">
      <%= f.submit "Sign up" , class: "btn btn-primary fs-4 w-100" %>
    </div>
  <% end %>
  <div class="mb-1">
    <%= render "devise/shared/links" %>
  </div>
</div>
