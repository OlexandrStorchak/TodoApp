<div class="col-lg-8 mx-auto bg-light shadow rounded-1 p-3 mt-5">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-1">
      <%= f.label :email, class: "form-label fs-3" %>
    </div>
    <div class="mb-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control bg-light", style:" text-align: center" %>
    </div>
    <div class="mb-1">
      <%= f.label :password, class: "form-label fs-3"  %>
    </div>
    <div class="mb-1">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control bg-light", style:" text-align: center" %>
    </div>
    <div class="mb-1">
      <% if devise_mapping.rememberable? %>
        <div class="mb-1">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "form-label fs-6"  %>
        </div>
      <% end %>
    </div>
    <div class="mb-1">
      <%= f.submit "Log in", class: "btn btn-primary fs-4 w-100" %>
    </div>
  <% end %>
  <div class="mb-2 mt-3">
    <%= render "users/shared/links" %>
  </div>
</div>
