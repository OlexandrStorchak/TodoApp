<div class="col-lg-8 mx-auto bg-light shadow rounded-1 p-3 mt-5">
  <%= form_with model: @user do |f| %>
    <div class="mb-1">
      <%= f.email_field :email, autofocus: true, class: "form-control bg-light", placeholder: "Email", style:" text-align: center" %>
    </div>
    <%=form_errors_helper(@user,:email)%>
    <div class="mb-1">
      <%= f.text_field :first_name, autofocus: true, class: "form-control bg-light", placeholder: "First name", style:" text-align: center" %>
    </div>
    <%=form_errors_helper(@user,:first_name)%>
    <div class="mb-1">
      <%= f.text_field :last_name, autofocus: true, class: "form-control bg-light", placeholder: "Last name", style:" text-align: center" %>
    </div>
    <%=form_errors_helper(@user,:last_name)%>
    <%if !@user.role.admin? && current_user.admin?%>
      <div class="mb-1 ">
        <%= f.select :role, User.role.values,
                          {}, {class: "form-select form-select-lg mb-1 mt-3"} %>
      </div>
    <%end%>
    <div class="mb-1 mt-3">
      <%= f.submit "Save", class: "btn btn-primary fs-4 w-100" %>
    </div>
  <%end%>
</div>
